<article class="demo">
  <header>
    <h2>Ember Sortable</h2>
  </header>

  <main>
    <section class="vertical-demo">
      <h3>Vertical</h3>

      {{#sortable-group tagName="ol" onChange="update" onInsert="insert" as |group|}}
        {{#each model.items as |item|}}
          {{#sortable-item tagName="li" model=item group=group handle=".handle"}}
           <div> {{{item}}}
            <span class="handle" data-item="{{item}}">
              <span>&vArr;</span>
            </span>
            </div>
          {{/sortable-item}}
        {{/each}}
      {{/sortable-group}}
    </section>

    {{#each model.picklist as |item|}}
      {{#draggable-item tagname="div" model=item}}
        {{{item.label}}} {{item.counter}}
      {{/draggable-item}}
    {{/each}}

    <section class="vertical-demo-droptarget">
      <h3>Vertical with drop target</h3>

      {{#sortable-group tagName="ol" onChange="update" onInsert="insert" as |group|}}
        {{#each model.items as |item|}}
          {{#sortable-item tagName="li" model=item group=group handle=".handle"}}
            <div>
              {{{item}}}
              <span class="handle" data-item="{{item}}">
                <span>&vArr;</span>
              </span>
            </div>
          {{/sortable-item}}
        {{/each}}
      {{/sortable-group}}
    </section>

    <section class="horizontal-demo">
      <h3>Horizontal</h3>

      {{#sortable-group tagName="ol" direction="x" onChange="update" onInsert="insert" as |group|}}
        {{#each model.items as |item|}}
          {{#sortable-item tagName="li" model=item group=group}}
            {{item-presenter item=item}}
          {{/sortable-item}}
        {{/each}}
      {{/sortable-group}}

    </section>


    <section class="horizontal-demo-droptarget">
      <h3>Horizontal with drop target</h3>

      {{#sortable-group tagName="ol" direction="x" onChange="update" onInsert="insert" as |group|}}
        {{#each model.items as |item|}}
          {{#sortable-item tagName="li" model=item group=group}}
            {{item-presenter item=item}}
          {{/sortable-item}}
        {{/each}}
      {{/sortable-group}}

    </section>


    <section class="table-demo">
      <h3>Table</h3>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Item</th>
          </tr>
        </thead>
        {{#sortable-group tagName="tbody" onChange="update" onInsert="insert" as |group|}}
          {{#each model.items as |item|}}
            {{#sortable-item tagName="tr" model=item group=group handle=".handle"}}
              <td><span class="handle" data-item="{{item}}">&vArr;</span></td>
              <td>{{{item}}}</td>
            {{/sortable-item}}
          {{/each}}
        {{/sortable-group}}
      </table>
    </section>

    <section class="scrollable-demo">
      <h3>Scrollable</h3>

      <div class="sortable-container">
        {{#sortable-group tagName="ol" onChange="update" onInsert="insert" as |group|}}
          {{#each model.items as |item|}}
            {{#sortable-item tagName="li" model=item group=group handle=".handle"}}
              <div>
                {{{item}}}
                <span class="handle" data-item="{{item}}">
                  <span>&vArr;</span>
                </span>
              </div>
            {{/sortable-item}}
          {{/each}}
        {{/sortable-group}}
      </div>
    </section>

    {{#if model.dragged}}
      <p>Just dragged {{model.dragged}}</p>
    {{/if}}
  </main>

  <footer>
    <p>
      <a href="https://github.com/jgwhite/ember-sortable">View on GitHub</a>
    </p>
  </footer>

</article>
